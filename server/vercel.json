{
  "version": 2,
  "builds": [
    { "src": "src/app.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "src/app.js"
    },
    {
      "src": "/(.*)", 
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
